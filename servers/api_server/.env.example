# Environment Configuration
ENVIRONMENT=development
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=INFO

# CORS Configuration
ENABLE_CORS=true
# Para desenvolvimento - usar localhost
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080
# Para produção - usar domínios reais (exemplo)
# ALLOWED_ORIGINS=https://seu-dominio.com,https://app.seu-dominio.com

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_WEB_API_KEY=your_web_api_key_here

# PDF Service Configuration
PDF_SERVICE_URL=http://localhost:8000

# Optional: Database Configuration
# DATABASE_URL=your-database-url-if-using-custom-db
